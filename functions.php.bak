	include_once( ABSPATH . WPINC . '/class-IXR.php' );
	include_once( ABSPATH . WPINC . '/class-wp-xmlrpc-server.php' );
	include_once( WP_PLUGIN_DIR . '/json-rest-api/lib/class-wp-json-server.php' );
